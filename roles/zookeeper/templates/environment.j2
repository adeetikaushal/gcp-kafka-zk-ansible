[Unit]
Description=Apache Zookeeper
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
Environment='ZOO_LOG_DIR={{ zookeeper.config.dataDir }}'
Environment='ZOO_LOG4J_PROP=INFO,ROLLINGFILE'
ExecStart={{ zookeeper.install }}/zookeeper/bin/zkServer.sh start
ExecStop={{ zookeeper.install }}/zookeeper/bin/zkServer.sh stop
Restart=on-failure
User={{zookeeper.user}}
Group={{zookeeper.user}}

[Install]
WantedBy=multi-user.target